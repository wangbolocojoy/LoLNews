<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/custom_title_height"
    >
<RelativeLayout
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="70dp">


    <LinearLayout
        android:id="@+id/simple_title_left_container"
        android:layout_width="@dimen/custom_title_height"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:gravity="center" >

        <ImageView
            android:id="@+id/simple_title_left_icon"
            android:layout_width="@dimen/custom_title_icon_size"
            android:layout_height="@dimen/custom_title_icon_size"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/title_back_icon" />
    </LinearLayout>

    <TextView
        android:layout_toRightOf="@id/simple_title_left_container"
        android:id="@+id/simple_title_center_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:gravity="center"
        android:text="标题"
        android:textColor="@color/white"
        android:textSize="@dimen/custom_title_center_txt_size" />

    <LinearLayout
        android:id="@+id/simple_title_right_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_title_height"
        android:gravity="right"
        android:orientation="horizontal" >
    </LinearLayout>
</RelativeLayout>
</RelativeLayout>