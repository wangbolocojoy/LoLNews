<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="55%h"
        app:layout_widthPercent="68%h" >

        <ImageView
            android:id="@+id/tab_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_launcher"
            android:scaleType="fitXY"
            app:layout_heightPercent="92%h"
        	app:layout_widthPercent="92%h" />

        <TextView
            android:id="@+id/tab_item_new_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_oval_tab_item_new_msg_flag"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/white"
            app:layout_heightPercent="48%h"
            app:layout_widthPercent="48%h"
            app:layout_textSizePercent="28%h"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>
    
    <TextView
        android:id="@+id/tab_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_textSizePercent="22%h" />

</com.zhy.android.percent.support.PercentLinearLayout>
