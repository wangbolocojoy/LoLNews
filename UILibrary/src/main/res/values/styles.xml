<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/popup_alpha_out</item>
    </style>
    
    <!-- 对话框风格 -->
    <style name="dialog_style" parent="android:Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <!-- 通用对话框 -->
    <style name="CustomDialog" parent="dialog_style">
        <!-- 出现动画 -->
        <item name="android:windowAnimationStyle">@style/PopupAnimation</item>
        <!-- 模糊 背景变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
</resources>
