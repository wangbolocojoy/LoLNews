<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/home_fragment_item1_adapter_shopitem_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp" />

    <TextView
        android:id="@+id/home_fragment_item1_adapter_shopitem_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:padding="2dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/home_fragment_item1_adapter_shopitem_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="#ed0505"
        android:padding="2dp"
        android:textSize="16sp" />


</LinearLayout>