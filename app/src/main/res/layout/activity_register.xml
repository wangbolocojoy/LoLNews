<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blog.news.ui.activity.register.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/ic_phone" />
            <com.blog.news.views.ClearEditText
                android:id="@+id/re_register_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:background="@null"
                android:hint="请输入您的手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:maxLines="1"
                android:textColorHint="@color/black_50" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"

            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/ic_yanzheng" />

            <com.blog.news.views.ClearEditText
                android:id="@+id/re_register_yzm"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:background="@null"
                android:hint="请输入您的验证码"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:textColorHint="@color/black_50" />

            <TextView
                android:id="@+id/re_register_post_yzm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="260dp"
                android:gravity="center"
                android:text="发送验证码"
                android:textColor="@color/black" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="9dp"
                android:src="@drawable/ic_password" />

            <com.blog.news.views.ClearEditText
                android:id="@+id/re_register_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:background="@null"
                android:hint="请输入您的密码"
                android:inputType="textPassword"
                android:maxLength="18"
                android:maxLines="1"
                android:textColorHint="@color/black_50" />
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/re_register_button"
            android:background="@color/theme_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
