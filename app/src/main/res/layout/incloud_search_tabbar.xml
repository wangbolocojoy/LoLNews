<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white_20"
    android:orientation="horizontal"
    android:padding="3dp">

    <ImageView
        android:id="@+id/incloud_search_tab_img"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:padding="3dp"
        android:src="@drawable/ic_default_image" />

    <android.support.v7.widget.CardView
        android:id="@+id/incloud_search_tab_serchview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_weight="8"
        android:background="@color/white"
        android:orientation="horizontal"
        app:cardCornerRadius="15dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/ic_search" />

        <com.shop.newshop_application.views.ClearEditText
            android:id="@+id/incloud_search_tab_searchrows"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:background="#00000000"
            android:hint="请输入你想搜索的商品"
            android:inputType="text"
            android:maxLines="1"
            android:textColorHint="@color/black_50"
            android:textSize="15sp" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/incloud_search_tab_searchrows_tab"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="3dp"
        android:text="搜索" />
</LinearLayout>